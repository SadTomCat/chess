{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base"
    ],
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    [
                        "~",
                        "./resources/js"
                    ]
                ]
            },
            "extensions": [
                ".js",
                ".scss",
                ".json",
                ".vue"
            ]
        }
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "no-trailing-spaces": "off",
        "consistent-return": 1,
        "no-useless-return": 0,
        "vue/custom-event-name-casing": 0,
        "class-methods-use-this": 0,
        "no-prototype-builtins": 0,
        "no-plusplus": 0,
        "max-len": [
            "error",
            120
        ],
        "indent": [
            "error",
            4
        ],
        "import/no-extraneous-dependencies": [
            "off",
            {
                "devDependencies": false,
                "optionalDependencies": false,
                "peerDependencies": false
            }
        ]
    }
}
